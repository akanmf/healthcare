@model BaseViewModel
@{
    var LayoutModel = Model ?? new BaseViewModel();

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthCare.UI</title>

    <title>CareMed</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="CareMed demo project">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="@Globals.CONTENT_FOLDER_ROOT_PATH/styles/bootstrap4/bootstrap.min.css">
    <link href="@Globals.CONTENT_FOLDER_ROOT_PATH/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="@Globals.CONTENT_FOLDER_ROOT_PATH/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="@Globals.CONTENT_FOLDER_ROOT_PATH/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="@Globals.CONTENT_FOLDER_ROOT_PATH/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="@Globals.CONTENT_FOLDER_ROOT_PATH/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="@Globals.CONTENT_FOLDER_ROOT_PATH/styles/responsive.css">

    <script src="@Globals.CONTENT_FOLDER_ROOT_PATH/js/jquery-3.2.1.min.js"></script>
    <script src="@Globals.CONTENT_FOLDER_ROOT_PATH/styles/bootstrap4/popper.js"></script>
    <script src="@Globals.CONTENT_FOLDER_ROOT_PATH/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="@Globals.CONTENT_FOLDER_ROOT_PATH/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="@Globals.CONTENT_FOLDER_ROOT_PATH/plugins/easing/easing.js"></script>
    <script src="@Globals.CONTENT_FOLDER_ROOT_PATH/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="@Globals.CONTENT_FOLDER_ROOT_PATH/js/custom.js"></script>
    <script type="text/javascript"
            src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
</head>
<body>
    @{Html.RenderPartial($"../Partials/_EditTranslationsPartial"); }
    <div class="super_container">

        <!-- Header -->
        <header class="header trans_200">

            <!-- Top Bar -->
            <div class="top_bar">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="top_bar_content d-flex flex-row align-items-center justify-content-start">
                                <div class="top_bar_item"><a href="#"><MLT Key="FAQ">FAQ</MLT></a></div>
                                <div class="top_bar_item"><a href="#"><MLT Key="REQUEST_AN_APPOINTMENT">Request an Appointment</MLT></a></div>
                                <div class="d-flex flex-row align-items-end justify-content-start ml-auto">

                                    @{Html.RenderPartial($"../Partials/_SelectLanguagePartial");}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Header Content -->
            <div class="header_container">
                <div class="container">
                    <div class="row">

                        <div class="col">
                            <div class="header_content d-flex flex-row align-items-center justify-content-end">
                                <nav class="main_nav ml-auto">
                                    @{Html.RenderPartial($"../Partials/_MenuLinksPartial", new MenuLinksPartialModel(loggedInUser: LayoutModel.LoginUser));}
                                </nav>
                                <div class="selectLanguageMobile">
                                    @{Html.RenderPartial($"../Partials/_SelectLanguagePartial");}
                                </div>
                                <div class="hamburger">

                                    <i class="fa fa-bars ml-auto" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




            <!-- Logo -->
            <div class="logo_container_outer">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="logo_container">
                                <a href="#">
                                    <div class="logo_content d-flex flex-column align-items-start justify-content-center">
                                        <div class="logo_line"></div>
                                        <div class="logo d-flex flex-row align-items-center justify-content-center">
                                            <div class="logo_text">Care<span>Med</span></div>
                                            <div class="logo_box">+</div>
                                        </div>
                                        <div class="logo_sub">Health Care Center</div>
                                    </div>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
    </div>

    </header>

    <!-- Menu -->
    <div class="menu_container menu_mm">

        <!-- Menu Close Button -->
        <div class="menu_close_container">
            <div class="menu_close"></div>
        </div>

        <!-- Menu Items -->
        <div class="menu_inner menu_mm">

            <div class="menu menu_mm">

                @{Html.RenderPartial($"../Partials/_MenuLinksPartial", new MenuLinksPartialModel("menu_list menu_mm", "menu_item menu_mm", LayoutModel.LoginUser)); }
            </div>
            <div class="menu_extra">
                <div class="menu_appointment"><a href="#"><MLT Key="REQUEST_AN_APPOINTMENT">Request an Appointment</MLT></a></div>
                <div class="menu_emergencies"><MLT Key="FOR_EMERGENCIES">For Emergencies</MLT>:<MLT Key="EMERGENCY_PHONE_NUMBER">+563 47558 623</MLT></div>
            </div>

        </div>

    </div>

    @RenderBody()


    <!-- Footer -->
    <footer class="footer">
        <div class="footer_container">
            <div class="container">
                <div class="row">

                    <!-- Footer - Links -->
                    <div class="col-lg-4 footer_col">
                        <div class="footer_about">
                            <ul class="footer_about_list">
                                <li><div class="footer_about_icon"><img src="@Globals.CONTENT_FOLDER_ROOT_PATH/images/phone-call.svg" alt=""></div><span><MLT Key="CONTACT_PHONE_NUMBER">+90 554 4430903</MLT></span></li>
                                <li><div class="footer_about_icon"><img src="@Globals.CONTENT_FOLDER_ROOT_PATH/images/envelope.svg" alt=""></div><span><MLT Key="CONTACT_EMAIL">akanmf@yahoo.com</MLT></span></li>
                                <li><div class="footer_about_icon"><img src="@Globals.CONTENT_FOLDER_ROOT_PATH/images/placeholder.svg" alt=""></div><span><MLT Key="CONTACT_ADDRESS">Ercument Batanay Sokak ATASEHIR/ISTANBUL</MLT></span></li>
                            </ul>
                        </div>
                    </div>


                    <!-- Footer - Links -->
                    <div class="col-lg-8 footer_col">
                        <div class="footer_links footer_about">
                            <ul>
                                <li><a href="#"><MLT Key="OUR_PARTNERS">Our Partners</MLT></a></li>
                                <li><a href="#"><MLT Key="SERVICES">Services</MLT></a></li>
                                <li><a href="#"><MLT Key="FREE_SERVICES">Free services</MLT></a></li>
                                <li><a href="#"><MLT Key="ABOUT_US">About us</MLT></a></li>
                                <li><a href="#"><MLT Key="CONTACT">Contact</MLT></a></li>
                                <li><a href="#"><MLT Key="FAQ">FAQ</MLT></a></li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="copyright_content d-flex flex-lg-row flex-column align-items-lg-center justify-content-start">
                            <div class="cr">
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                Copyright &copy;
                                <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with
                                <i class="fa fa-heart-o" aria-hidden="true"></i> by
                                <a href="https://colorlib.com" target="_blank">Colorlib</a>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            </div>
                            <div class="footer_social ml-lg-auto">
                                <ul>
                                    <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-dribbble" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-behance" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>