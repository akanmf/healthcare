
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Globals.CONTENT_FOLDER_ROOT_PATH/styles/contact.css" rel="stylesheet" />
<link href="@Globals.CONTENT_FOLDER_ROOT_PATH/styles/contact_responsive.css" rel="stylesheet" />


<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyCIwF204lFZg1y4kPSIhKaHEXMLYxxuMhA"></script>
<script src="@Globals.CONTENT_FOLDER_ROOT_PATH/js/contact.js"></script>

<div class="contact">


    <div class="container">
        <div class="row">

            <!-- Contact Info -->
            <div class="col-lg-6">
                <div class="section_title"><h2>Get in touch</h2></div>
                <div class="contact_text">
                    <p> Contact burasımış hacı. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur ante leo, finibus quis est ut, tempor tincidunt ipsum. Nam consequat semper sollicitudin. Aliquam nec dapibus massa.</p>
                </div>
                <ul class="contact_about_list">
                    <li><div class="contact_about_icon"><img src="@Globals.CONTENT_FOLDER_ROOT_PATH/images/phone-call.svg" alt=""></div><span>+45 677 8993000 223</span></li>
                    <li><div class="contact_about_icon"><img src="@Globals.CONTENT_FOLDER_ROOT_PATH/images/envelope.svg" alt=""></div><span>office@template.com</span></li>
                    <li><div class="contact_about_icon"><img src="@Globals.CONTENT_FOLDER_ROOT_PATH/images/placeholder.svg" alt=""></div><span>Main Str. no 45-46, b3, 56832, Los Angeles, CA</span></li>
                </ul>
            </div>

            <!-- Contact Form -->
            <div class="col-lg-6 form_col">
                <div class="contact_form_container">
                    <form action="/Contact/SendForm" id="contact_form" class="contact_form" method="post">
                        <div class="row">
                            <div class="col-md-6 input_col">
                                <div class="input_container input_name"><input name="Name" type="text" class="contact_input" placeholder="Name" required="required"></div>
                            </div>
                            <div class="col-md-6 input_col">
                                <div class="input_container"><input name="Email" type="email" class="contact_input" placeholder="E-mail" required="required"></div>
                            </div>
                        </div>
                        <div class="input_container"><input name="PhoneNumber" type="text" class="contact_input" placeholder="Phone Number" required="required"></div>
                        <div class="input_container"><textarea name="Message" class="contact_input contact_text_area" placeholder="Message" required="required"></textarea></div>
                        <button class="button contact_button" type="submit">Send</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row map_row">
            <div class="col">

                <!-- Contact Map -->

                <div class="contact_map">

                    <!-- Google Map -->

                    <div class="map">
                        <div id="google_map" class="google_map">
                            <div class="map_container">
                                <div id="map"></div>
                            </div>
                        </div>
                    </div>                    

                    <!-- Working Hours -->
                    <div class="box working_hours">
                        <div class="box_icon d-flex flex-column align-items-start justify-content-center"><div style="width:29px; height:29px;"><img src="@Globals.CONTENT_FOLDER_ROOT_PATH/images/alarm-clock.svg" alt=""></div></div>
                        <div class="box_title">Working Hours</div>
                        <div class="working_hours_list">
                            <ul>
                                <li class="d-flex flex-row align-items-center justify-content-start">
                                    <div>Monday – Friday</div>
                                    <div class="ml-auto">8.00 – 19.00</div>
                                </li>
                                <li class="d-flex flex-row align-items-center justify-content-start">
                                    <div>Saturday</div>
                                    <div class="ml-auto">9.30 – 17.00</div>
                                </li>
                                <li class="d-flex flex-row align-items-center justify-content-start">
                                    <div>Sunday</div>
                                    <div class="ml-auto">9.30 – 15.00</div>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>


</div>

